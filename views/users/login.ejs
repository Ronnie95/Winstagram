<%- include('../partials/header.ejs', {name: "Users", styleSheet: "/scripts/login.js"}) %>
<!-- form for loggin in -->
<div class="login-container">
    <h1>Login to your account</h1>
<form action="/users/login" method="POST">
    <label for="email">Email or username:</label>
    <input type="text" name="email" id="email">
    <br>
    <label for="password">Password:</label>
    <input type="password" name="password" id="password">
    <br>
    <input type="checkbox" name="checkbox" id="togglePassword">
        <label for="checkbox">Show Password</label>
    <br>
    <input type="submit" value="Login to your account" >
</form>
<!-- redirect to sign up if no account -->
<form action="/users/signup" method="get">
    <button type="submit" class="button-primary">Don't have an account? Create one here</button>
</form>
</div>
<%- include('../partials/footer.ejs') %>
